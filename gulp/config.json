{
  "path": {
    "build": {
      "html": "dist",
      "js": "dist/js",
      "css": "dist/css",
      "img": "dist/img",
      "fonts": "dist/fonts"
    },
    "src": {
      "html": "app/serve/*.html",
      "js": "app/serve/js/**/*.js",
      "css": "app/serve/css/**/*.css",
      "img": "app/serve/img/**/*.*",
      "fonts": "app/serve/fonts/**/*.*"
    },
    "watch": {
      "pug": {
        "pages": "app/pug/pages/**/*.pug",
        "all": "app/pug/**/*.pug"
      },
      "data": {
        "content": "data/content.json",
        "navigation": "data/navigation.json"
      },
      "js": "app/pug/**/*.js",
      "style": "app/sass/**/*.sass",
      "fonts": "app/fonts/**/*.*",
      "img": "app/img/**/*.*"
    },
    "app": {
      "html": "app/serve",
      "js": "app/serve/js",
      "css": "app/serve/css",
      "img": "app/serve/img",
      "fonts": "app/serve/fonts"
    },
    "pug":{
      "navigation": "./data/navigation.json",
      "content": "./data/content.json"
    },
    "libs":{
      "js": {
        "jquery": "app/libs/bower/jquery/dist/jquery.js",
        "any": []
      },
      "fonts": []
    },
    "clean": "dist"
  },
  "browserSync":{
    "tunnel": false,
    "notify": false
  },
  "smartGrid": {
    "settings": {
      "filename": "_smart-grid",
      "outputStyle": "sass",
      "columns": 12,
      "offset": "30px",
      "mobileFirst": false,
      "container": {
        "maxWidth": "1140px",
        "fields": "30px"
      },
      "breakPoints": {
        "xl": {
          "width": "1690px"
        },
        "lg": {
          "width": "1200px"
        },
        "md": {
          "width": "992px"
        },
        "sm": {
          "width": "720px",
          "fields": "15px"
        },
        "xs": {
          "width": "576px"
        }
      }
    },
    "outputFolder": "app/sass/"
  },
  "autoprefixer": {
    "browsers": ["last 15 versions"],
    "cascade": false
  },
  "release": false
}