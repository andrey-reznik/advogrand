{
  "path": {
    "build": {
      "html": "dist",
      "js": "dist/js",
      "css": "dist/css",
      "img": "dist/img",
      "fonts": "dist/fonts"
    },
    "src": {
      "html": "app/serve/*.html",
      "js": "app/serve/js/**/*.{js,map}",
      "css": "app/serve/css/**/*.{css,map}",
      "img": "app/serve/img/**/*.{jpg,png,gif,svg}",
      "fonts": "app/serve/fonts/**/*.*"
    },
    "watch": {
      "pug": {
        "pages": "app/pug/pages/**/*.pug",
        "all": "app/pug/**/*.pug"
      },
      "data": {
        "content": "data/content.json",
        "navigation": "data/navigation.json"
      },
      "js": "app/pug/**/*.js",
      "style": "app/stylus/*.styl",
      "fonts": "app/fonts/**/*.*",
      "img": "app/img/**/*.{jpg,png,gif,svg}",
      "svg": "app/img/**/*.svg"
    },
    "app": {
      "html": "app/serve",
      "js": "app/serve/js",
      "css": "app/serve/css",
      "img": "app/serve/img",
      "fonts": "app/serve/fonts"
    },
    "pug": {
      "navigation": "./data/navigation.json",
      "content": "./data/content.json"
    },
    "libs": {
      "js": "gulp/sources/js.json",
      "fonts": "gulp/sources/fonts.json"
    },
    "tasks": [
      "./gulp/tasks/dist",
      "./gulp/tasks/clear",
      "./gulp/tasks/fonts",
      "./gulp/tasks/img",
      "./gulp/tasks/scripts",
      "./gulp/tasks/pug",
      "./gulp/tasks/stylus",
      "./gulp/tasks/serve",
      "./gulp/tasks/smartgrid",
      "./gulp/tasks/svg",
      "./gulp/tasks/watch"
    ]
  },
  "browserSync": {
    "tunnel": false,
    "notify": false
  },
  "smartGrid": {
    "config": "gulp/smartgrid.json"
  },
  "autoprefixer": {
    "browsers": ["last 15 versions"],
    "cascade": false
  },
  "loadPludins":{
    "pattern": ["*"]
  },
  "release": false,
  "gulpRoot": "../../"
}